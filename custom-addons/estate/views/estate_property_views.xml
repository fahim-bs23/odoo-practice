<?xml version="1.0"?>
<odoo>
    <!-- Kanban View for Real Estate -->
    <record id="view_estate_property_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="property_type_id" invisible="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card">
                            <div t-attf-class="#{!selection_mode ? 'text-center' : ''}">
                                <i class="fa fa-building" role="img" aria-label="Enterprise" title="Enterprise"></i> <strong><field name="name"/></strong>
                            </div>
                            <hr class="mt4 mb4"/>
                            <div class="row">
                                <div class="col-4 text-center">
                                    <strong>Name:</strong>
                                </div>
                                <div class="col-4 text-center">
                                    <strong>Description:</strong>
                                </div>
                                <div class="col-4 text-center">
                                    <strong>Status:</strong>
                                </div>
                                <div class="col-4 text-center">
                                    <field name="name"/>
                                </div>
                                <div class="col-4 text-center">
                                    <field name="description"/>
                                </div>
                                <div class="col-4 text-center">
                                    <field name="status"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
                <groups>
                    <group expand="1" string="Property Type" name="property_type_id">
                        <kanban>
                            <field name="property_type_id"/>
                        </kanban>
                    </group>
                </groups>
            </kanban>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Estate">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <filter string="Garden" name="garden" domain="['|', ('garden', '=', True), ('garden', '=', False)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]" groups="estate.estate_group_manager"/>
            </search>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel" default_order="id desc">
                <field name="name"/>
                <field name="description"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <header>
                    <button name="action_sold" type="object" string="Sold" attrs="{'invisible': [('status', 'in', ['sold', 'cancel'])]}"/>
                    <button name="action_cancel" type="object" string="Cancel" attrs="{'invisible': [('status', 'in', ['sold', 'cancel'])]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_property_offer" type="object" class="oe_stat_button" icon="fa-star">
                            <field string="Property Offer" name="name"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="postcode"/>
                        <field name="date_availability"/>
                        <field name="expected_price"/>
                        <field name="selling_price"/>
                        <field name="bedrooms"/>
                        <field name="living_area"/>
                        <field name="facades"/>
                        <field name="garage"/>
                        <field name="garden"/>
                        <field name="garden_area"/>
                        <field name="garden_orientation"/>
                        <field name="active"/>
                        <field name="price_difference"/>
                        <field name="status"/>
                        <field name="property_type_id"/>
                        <field name="user_id"/>
                        <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" attrs="{'readonly': ['|', ('status', '=', 'sold'), ('status', '=', 'cancel')]}"/>
                        <field name="property_offer_ids"> 
                            <tree editable="bottom" decoration-danger="status=='refused'" decoration-success="status=='accepted'">
                                <field name="offer_price"/>
                                <button name="action_accepted" type="object" string="Accept" attrs="{'invisible': [('parent.status', 'in', ['sold', 'cancel'])]}"/>
                                <button name="action_refused" type="object" string="Refuse" attrs="{'invisible': [('parent.status', 'in', ['sold', 'cancel'])]}"/>
                                <field name="status"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
</odoo>